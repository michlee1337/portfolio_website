<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Goole fonts -->
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:400,700%7CFira+Sans:300,400,400i,600" rel="stylesheet">
    <!-- Material icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">
    <!-- CSS -->
    <%= stylesheet_link_tag "pages" %>
</head>

<body>
    <%= render "pages/navbar" %>

    <main id="content">
		<!-- Banner -->
	    <div class="hero container py-5 text-white">
	        <h1><%= @project.name %></h1>
	        <hr class="border-3 border-white my-4 ml-0 text-left w-25" role="presentation">
	        <div class="row">
	            <div class="col-lg-8">
	                <p class="lead mb-4 text-secondary"><%= @project.subtitle %></p>
	            </div>
	        </div>
	    </div>

        <div class="bg-white text-black">
            <div class="container py-2">
                <div class="bg-white px-3 px-lg-0 shift-up">
                    <div class="row justify-content-center py-4 py-lg-5">
                        <div class="col-md-10 col-lg-8">

                            <img src=<%= @project.image %> class="img-fluid mt-3 mb-2" alt="Placeholder">

                            <p><%= @project.content %></p>

                            <p>Learn more <a href=<%= @project.link_to_project %>>here</a>.</p>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- COMMENTS -->
        <div class="container py-5 text-white">
	        <h4 class="text-white">Comments: <%= @project.comments.count %></h4>
	        <hr class="border-3 border-white my-4 ml-0 text-left w-25" role="presentation">
	        <% unless @project.comments.empty? %>
				<table class="comments" summary="project comments"> <%= render @project.comments %>
				</table>
			<% end %>
            <%= render "comments/form" %>
        </div>
    </main>

    <!-- Footer -->
    <h1><%= @project.id %></h1>
    <%= render "pages/footer" %>
</body>
</html>